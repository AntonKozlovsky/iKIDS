<!-- Acme/DemoBundle/Resources/config/admin.xml -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
       <service id="sonata.admin.book" class="Acme\DemoBundle\Admin\BookAdmin">
          <tag name="sonata.admin" manager_type="orm" group="Объекты библиотеки" label="Книги"/>
          <argument />
          <argument>Acme\DemoBundle\Entity\Book</argument>
          <argument />
          <call method="setTranslationDomain">
              <argument>AcmeDemoBundle</argument>
          </call>
      </service>
	  
      <service id="sonata.admin.image" class="Acme\DemoBundle\Admin\ImageAdmin">
         <tag name="sonata.admin" manager_type="orm" group="Объекты библиотеки" label="Картинки"/>
         <argument />
         <argument>Acme\DemoBundle\Entity\Image</argument>
         <argument />
         <call method="setTranslationDomain">
             <argument>AcmeDemoBundle</argument>
         </call>
     </service>	  
	  
   </services>
</container>